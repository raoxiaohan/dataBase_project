page {
    background: #f0eff5;
    min-height: 100%
}

.wrap {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    background: #fff;
    margin-top: .8rem;
    font-size: 26rpx;
    position: relative
}

.wrap:after,
.wrap:before {
    content: '';
    width: 200%;
    height: 0;
    -webkit-transform: scale(.5);
    transform: scale(.5);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    position: absolute;
    left: 0
}

.wrap:before {
    top: 0;
    border-top: 1px solid #c7c7c9
}

.wrap:after {
    bottom: 0;
    border-bottom: 1px solid #c7c7c9
}

.wrap-top {
    width: 87%;
    padding-top: .4rem;
    padding-bottom: .3rem;
    position: relative
}

.wrap-top:after {
    content: '';
    width: 200%;
    height: 0;
    -webkit-transform: scale(.5);
    transform: scale(.5);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    position: absolute;
    left: 0;
    bottom: 0;
    border-bottom: 1px solid #d6d6d6
}

.wrap-top .txt {
    color: #525f76;
    letter-spacing: .107rem;
    line-height: 1.173rem;
    display: block;
    margin-bottom: .2rem;
    font-size: 30rpx
}

.wrap-top .orderLi {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center
}
.arrow::before{
    content: "——";
}
.arrow::after{
    content: ">";
}
